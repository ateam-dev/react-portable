{
  "name": "react-portable",
  "version": "0.0.0",
  "description": "ðŸŽ’ReactPortable: A lightweight, script-free library enabling React components to run seamlessly on any webpage, including those without frontend frameworks.",
  "main": "index.js",
  "repository": "git@github.com:aiji42/react-portable.git",
  "author": "Aiji Ueijima <aiji42@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build --filter=@react-portable/*",
    "build:watch": "turbo run build:watch --filter=@react-portable/*",
    "start": "turbo run start --filter=examples-*",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "release": "turbo run build&& changeset version && changeset publish"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "prettier": "^2.8.8",
    "turbo": "^1.9.9"
  },
  "private": true
}
